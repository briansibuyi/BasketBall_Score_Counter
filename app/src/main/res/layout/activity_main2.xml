<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0a493e"
    tools:context="com.example.brian.score_board.Main2Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <Button
            android:id="@+id/team_a_one_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#6be10c"
            android:onClick="teamAoneScore"
            android:text="+1 Point"
            android:textColor="#000000"
            android:layout_alignBaseline="@+id/team_b_one_score"
            android:layout_alignBottom="@+id/team_b_one_score"
            android:layout_alignLeft="@+id/team_a_two_score"
            android:layout_alignStart="@+id/team_a_two_score" />

        <Button
            android:id="@+id/team_b_one_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#6be10c"
            android:onClick="teamBoneScore"
            android:text="+1 Point"
            android:layout_below="@+id/team_a_score"
            android:layout_alignLeft="@+id/team_b_two_score"
            android:layout_alignStart="@+id/team_b_two_score"
            android:layout_marginTop="29dp" />

        <Button
            android:id="@+id/team_a_two_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#05c47b"
            android:onClick="teamATwoScore"
            android:text="+2 point"
            android:layout_below="@+id/team_a_one_score"
            android:layout_toLeftOf="@+id/button7"
            android:layout_toStartOf="@+id/button7"
            android:layout_marginTop="48dp" />

        <Button
            android:id="@+id/team_b_two_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#05c47b"
            android:onClick="teamTwoScore"
            android:text="+2 Point"
            android:layout_alignBaseline="@+id/team_a_two_score"
            android:layout_alignBottom="@+id/team_a_two_score"
            android:layout_toRightOf="@+id/button7"
            android:layout_toEndOf="@+id/button7"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp" />

        <Button
            android:id="@+id/team_a_three_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#cde217"
            android:onClick="teamAThreeScore"
            android:text="+3 Point"
            android:layout_below="@+id/team_a_two_score"
            android:layout_toLeftOf="@+id/button7"
            android:layout_toStartOf="@+id/button7"
            android:layout_marginTop="28dp" />

        <Button
            android:id="@+id/team_b_three_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#cde217"
            android:onClick="teamBThewwScore"
            android:text="+3 Point"
            android:layout_alignBaseline="@+id/team_a_three_score"
            android:layout_alignBottom="@+id/team_a_three_score"
            android:layout_alignLeft="@+id/team_b_two_score"
            android:layout_alignStart="@+id/team_b_two_score" />

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEAM A"
            android:textColor="#f0b499"
            android:textSize="24sp"
            android:layout_alignBaseline="@+id/TextView2"
            android:layout_alignBottom="@+id/TextView2"
            android:layout_alignLeft="@+id/team_a_one_score"
            android:layout_alignStart="@+id/team_a_one_score"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

        <TextView
            android:id="@+id/TextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team B"
            android:textColor="#f0b499"
            android:textSize="24sp"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/team_b_one_score"
            android:layout_alignEnd="@+id/team_b_one_score"
            android:layout_marginTop="27dp" />

        <TextView
            android:id="@+id/team_a_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#0824f7"
            android:textSize="30sp"
            android:layout_marginTop="29dp"
            android:layout_below="@+id/TextView1"
            android:layout_alignRight="@+id/team_a_one_score"
            android:layout_alignEnd="@+id/team_a_one_score"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />

        <TextView
            android:id="@+id/team_b_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="#0824f7"
            android:textSize="30sp"
            android:layout_alignBaseline="@+id/team_a_score"
            android:layout_alignBottom="@+id/team_a_score"
            android:layout_alignLeft="@+id/TextView2"
            android:layout_alignStart="@+id/TextView2"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#fa021f"
            android:onClick="resetButton"
            android:text="reset"
            android:layout_below="@+id/team_a_three_score"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp" />

    </RelativeLayout>

</ScrollView>
